<script lang="ts">
  import { createClient } from '$lib/supabase';
  import { enhance } from '$app/forms';
  import { goto } from '$app/navigation';
  import TwoFactorSetup from '$lib/components/auth/TwoFactorSetup.svelte';

  interface Props {
    data: {
      user: any;
      profile: any;
      identities: Array<{
        provider: string;
        email: string;
        created_at: string;
      }>;
      isSoleOwner: boolean;
    };
    form: any;
  }

  let { data, form }: Props = $props();
  
  const supabase = createClient();
  
  let displayName = $state(data.profile?.display_name || '');
  let avatarUrl = $state(data.profile?.avatar_url || '');
  let linking = $state(false);
  let showDeleteConfirm = $state(false);
  let deleteConfirmText = $state('');
  let error = $state('');

  const availableProviders = [
    { id: 'google', name: 'Google', icon: 'ðŸ”µ', color: 'text-blue-600' },
    { id: 'github', name: 'GitHub', icon: 'âš«', color: 'text-gray-800' }
  ];

  const linkedProviders = $derived(
    new Set(data.identities.map(i => i.provider))
  );

  async function linkProvider(provider: 'google' | 'github') {
    linking = true;
    error = '';

    try {
      const { error: linkError } = await supabase.auth.linkIdentity({
        provider,
        options: {
          redirectTo: `${window.location.origin}/profile`
        }
      });

      if (linkError) {
        error = linkError.message;
      }
    } catch (e: any) {
      error = e.message;
    } finally {
      linking = false;
    }
  }

  function handleDeleteAccount() {
    if (deleteConfirmText !== 'DELETE') {
      error = 'Please type DELETE to confirm';
      return;
    }
    // Form will handle the actual deletion
  }
</script>

<div class="container mx-auto max-w-4xl p-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold">Profile Settings</h1>
    <p class="text-base-content/70 mt-2">Manage your account and connected providers</p>
  </div>

  {#if form?.success}
    <div class="alert alert-success mb-6">
      <span>âœ“ Profile updated successfully</span>
    </div>
  {/if}

  {#if form?.message || error}
    <div class="alert alert-error mb-6">
      <span>{form?.message || error}</span>
    </div>
  {/if}

  <!-- Profile Information -->
  <div class="card bg-base-100 shadow-xl mb-6">
    <div class="card-body">
      <h2 class="card-title">Profile Information</h2>
      
      <form method="POST" action="?/updateProfile" use:enhance>
        <div class="form-control">
          <label class="label" for="display_name">
            <span class="label-text">Display Name</span>
          </label>
          <input
            id="display_name"
            name="display_name"
            type="text"
            class="input input-bordered"
            bind:value={displayName}
            placeholder="Your name"
          />
        </div>

        <div class="form-control mt-4">
          <label class="label" for="avatar_url">
            <span class="label-text">Avatar URL</span>
          </label>
          <input
            id="avatar_url"
            name="avatar_url"
            type="url"
            class="input input-bordered"
            bind:value={avatarUrl}
            placeholder="https://example.com/avatar.jpg"
          />
        </div>

        <div class="form-control mt-4">
          <label class="label" for="email">
            <span class="label-text">Email</span>
          </label>
          <input
            type="email"
            class="input input-bordered"
            value={data.user?.email}
            disabled
          />
          <label class="label" for="email">
            <span class="label-text-alt">Email cannot be changed</span>
          </label>
        </div>

        <div class="card-actions justify-end mt-6">
          <button type="submit" class="btn btn-primary">
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Connected Accounts -->
  <div class="card bg-base-100 shadow-xl mb-6">
    <div class="card-body">
      <h2 class="card-title">Connected Accounts</h2>
      <p class="text-sm text-base-content/70 mb-4">
        Link additional accounts to sign in with multiple providers
      </p>

      <div class="space-y-3">
        {#each availableProviders as provider}
          {@const isLinked = linkedProviders.has(provider.id)}
          {@const identity = data.identities.find(i => i.provider === provider.id)}
          
          <div class="flex items-center justify-between p-4 border border-base-300 rounded-lg">
            <div class="flex items-center gap-3">
              <span class="text-3xl">{provider.icon}</span>
              <div>
                <p class="font-semibold {provider.color}">{provider.name}</p>
                {#if isLinked && identity}
                  <p class="text-sm text-base-content/70">{identity.email}</p>
                  <p class="text-xs text-base-content/50">
                    Connected {new Date(identity.created_at).toLocaleDateString()}
                  </p>
                {:else}
                  <p class="text-sm text-base-content/50">Not connected</p>
                {/if}
              </div>
            </div>

            <div>
              {#if isLinked}
                <div class="badge badge-success">Connected</div>
              {:else}
                <button 
                  type="button"
                  class="btn btn-sm btn-primary"
                  onclick={() => linkProvider(provider.id as any)}
                  disabled={linking}
                >
                  {#if linking}
                    <span class="loading loading-spinner loading-xs"></span>
                  {/if}
                  Connect
                </button>
              {/if}
            </div>
          </div>
        {/each}
      </div>

      {#if data.identities.length <= 1}
        <div class="alert alert-info mt-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Connect multiple accounts to sign in with any of them</span>
        </div>
      {/if}
    </div>
  </div>

  <!-- Two-Factor Authentication -->
  <TwoFactorSetup />

  <!-- Danger Zone -->
  <div class="card bg-base-100 shadow-xl border-2 border-error">
    <div class="card-body">
      <h2 class="card-title text-error">Danger Zone</h2>
      
      {#if !showDeleteConfirm}
        <p class="text-sm text-base-content/70 mb-4">
          Once you delete your account, there is no going back. All your data will be permanently removed.
        </p>

        {#if data.isSoleOwner}
          <div class="alert alert-warning mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <span>You cannot delete your account because you are the only owner of one or more families. Please transfer ownership first.</span>
          </div>
        {/if}

        <div class="card-actions justify-start">
          <button
            type="button"
            class="btn btn-error btn-outline"
            onclick={() => showDeleteConfirm = true}
            disabled={data.isSoleOwner}
          >
            Delete Account
          </button>
        </div>
      {:else}
        <div class="space-y-4">
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>This action cannot be undone. This will permanently delete your account and remove all your data.</span>
          </div>

          <div class="form-control">
            <label class="label" for="delete_confirm">
              <span class="label-text">Type <strong>DELETE</strong> to confirm</span>
            </label>
            <input
              id="delete_confirm"
              type="text"
              class="input input-bordered"
              bind:value={deleteConfirmText}
              placeholder="DELETE"
            />
          </div>

          <form method="POST" action="?/deleteAccount" use:enhance>
            <div class="flex gap-2">
              <button
                type="button"
                class="btn btn-ghost"
                onclick={() => {
                  showDeleteConfirm = false;
                  deleteConfirmText = '';
                }}
              >
                Cancel
              </button>
              <button
                type="submit"
                class="btn btn-error"
                disabled={deleteConfirmText !== 'DELETE'}
                onclick={handleDeleteAccount}
              >
                I understand, delete my account
              </button>
            </div>
          </form>
        </div>
      {/if}
    </div>
  </div>
</div>